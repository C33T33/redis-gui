{
  "name": "redis-gui",
  "version": "2.0.0",
  "private": true,
  "description": "Graphical UI for managing Redis databases",
  "author": {
    "email": "contact@ernestas.app",
    "name": "Ernestas Kvedaras",
    "url": "https://ernestas.app"
  },
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production npm run build",
    "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "pretest": "yarn run build",
    "test": "node tests/app.spec.js",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "yarn run typecheck-main && yarn run typecheck-preload && yarn run typecheck-renderer"
  },
  "browserslist": [
    "Chrome 94"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.0",
    "@types/lodash": "^4.14.177",
    "@types/redis": "^2.8.32",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "@vitejs/plugin-vue": "^1.9.4",
    "autoprefixer": "^10.4.0",
    "cross-env": "^7.0.3",
    "electron": "^15.3.1",
    "electron-builder": "^22.13.1",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.2.0",
    "eslint-plugin-vue": "^8.0.3",
    "lint-staged": "^11.2.6",
    "playwright": "^1.16.3",
    "postcss": "^8.3.11",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "^2.2.19",
    "typescript": "^4.4.4",
    "vite": "^2.6.14",
    "vue-tsc": "^0.29.4"
  },
  "dependencies": {
    "@meforma/vue-toaster": "^1.2.2",
    "electron-updater": "^4.6.2",
    "lodash": "^4.17.21",
    "lowdb": "^3.0.0",
    "redis": "^3.1.2",
    "redis-ssh": "^1.0.0",
    "vue": "^3.2.22",
    "vuex": "^4.0.0"
  },
  "resolutions": {
    "redis-ssh/redis": "^3.0.2",
    "@vue/cli-service/**/dns-packet": "^5.2.2"
  }
}
