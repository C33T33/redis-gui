{
  "name": "redis-gui",
  "version": "2.0.0",
  "private": true,
  "description": "Graphical UI for managing Redis databases",
  "author": {
    "email": "contact@ernestas.app",
    "name": "Ernestas Kvedaras",
    "url": "https://ernestas.app"
  },
  "engines": {
    "node": ">=v16.13",
    "npm": ">=8.1"
  },
  "main": "packages/main/dist/index.cjs",
  "scripts": {
    "build": "node scripts/build.js",
    "precompile": "cross-env MODE=production npm run build",
    "compile": "electron-builder build --config electron-builder.config.js --dir --config.asar=false",
    "pretest": "yarn run build",
    "test": "node tests/app.spec.js",
    "watch": "node scripts/watch.js",
    "lint": "eslint . --ext js,ts,vue",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "vue-tsc --noEmit -p packages/renderer/tsconfig.json",
    "typecheck": "yarn run typecheck-main && yarn run typecheck-preload && yarn run typecheck-renderer"
  },
  "browserslist": [
    "Chrome 94"
  ],
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged",
    "pre-push": "npm run typecheck"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "eslint --cache --fix"
  },
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.2.1",
    "@types/lodash": "^4.14.178",
    "@types/splitpanes": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "@vitejs/plugin-vue": "^2.0.1",
    "autoprefixer": "^10.4.1",
    "cross-env": "^7.0.3",
    "electron": "^15.3.4",
    "electron-builder": "^22.14.5",
    "electron-devtools-installer": "^3.2.0",
    "eslint": "^8.6.0",
    "eslint-plugin-vue": "^8.2.0",
    "lint-staged": "^12.1.4",
    "playwright": "^1.17.1",
    "postcss": "^8.4.5",
    "simple-git-hooks": "^2.7.0",
    "tailwindcss": "^3.0.8",
    "typescript": "^4.5.4",
    "vite": "^2.7.10",
    "vue-tsc": "^0.30.1"
  },
  "dependencies": {
    "@meforma/vue-toaster": "https://github.com/MeForma/vue-toaster.git#1.3.0",
    "electron-updater": "^4.6.2",
    "lodash": "^4.17.21",
    "lowdb": "^3.0.0",
    "mitt": "^3.0.0",
    "pinia": "^2.0.9",
    "pretty-bytes": "^5.6.0",
    "redis": "^4.0.1",
    "splitpanes": "^3.0.6",
    "vue": "^3.2.26",
    "vue-json-pretty": "^2.0.6",
    "vue-universal-modal": "^1.1.3"
  },
  "resolutions": {
    "redis-ssh/redis": "^3.0.2",
    "@vue/cli-service/**/dns-packet": "^5.2.2"
  }
}
